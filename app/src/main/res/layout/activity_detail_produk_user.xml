<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dp"
    tools:context="com.sourcey.KauLempung.User.DetailProdukUser">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/gambar"
            android:layout_gravity="center"
            android:layout_width="180dp"
            android:layout_height="180dp" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/judul_title"
            android:text="Text"
            android:textStyle="bold"
            android:textSize="25sp"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:layout_gravity="center"
            android:id="@+id/harga"
            android:text="Text"
            android:textSize="20sp"
            android:textColor="@color/primary"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <LinearLayout
            android:padding="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nama Toko"
            android:textSize="20dp"
            android:textColor="@color/primary"
            android:textStyle="bold"
            android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/namatoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nama Toko"
                android:textSize="17dp"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/tlpntoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:textSize="17dp"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif"/>

            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Alamat Toko"
                android:textSize="20dp"
                android:textColor="@color/primary"
                android:textStyle="bold"
                android:fontFamily="sans-serif"/>

            <TextView
                android:id="@+id/almttoko"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Telepon"
                android:textSize="17dp"
                android:textColor="@color/primary"
                android:fontFamily="sans-serif"/>

            <Button
                android:onClick="hubungi"
                android:layout_gravity="center"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:text="Hubungi Penjual"
                android:padding="8dp"
                android:textColor="@color/primary"
                android:background="@drawable/button_layout2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Beri Ulasan Produk"
                android:textColor="@color/primary"
                android:textSize="18dp"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/komentar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Masukkan Komentar"/>

            <Button
                android:onClick="submit"
                android:layout_gravity="center"
                android:layout_width="120dp"
                android:layout_height="50dp"
                android:text="Submit"
                android:padding="8dp"
                android:textColor="@color/primary"
                android:background="@drawable/button_layout2" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_comment"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>
        </LinearLayout>

    </LinearLayout>

</ScrollView>
